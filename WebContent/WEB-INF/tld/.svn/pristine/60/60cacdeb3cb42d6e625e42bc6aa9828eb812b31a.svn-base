<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE taglib PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
      "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">
<taglib>
    <tlib-version>2.2.3</tlib-version>
    <jsp-version>1.2</jsp-version>
    <short-name>hmenu</short-name>
    <uri>/path-hmenu-tags</uri>
    <display-name>"Horizontal Menu Tags"</display-name>
    <description><![CDATA["horizontalMenu"]]></description>
    <tag>
        <name>horizontalmenu</name>
        <tag-class>com.path.struts2.taglib.horizontalmenu.HorizontalMenuTagSupport</tag-class>
        <body-content>JSP</body-content>
        <description><![CDATA[Horizontal Menu]]></description>
        <attribute>
            <name>id</name>
            <required>false</required>
            <rtexprvalue>false</rtexprvalue>
            <description>
                <![CDATA[id for referencing element]]></description>
        </attribute>        
        <attribute>
            <name>actionName</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
            <description><![CDATA[ Action Name]]></description>
        </attribute>
        <attribute>
            <name>collapseprev</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <description><![CDATA[ Specifies if previous menu should collapse when current menu expanded]]></description>
        </attribute>
        <attribute>
            <name>targetName</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <description><![CDATA[ Specifies target div where the Menu screen will open ]]></description>
        </attribute>
        <attribute>
            <name>scrollSize</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>            
            <description><![CDATA[ Controls number of menus to be shown at root level at a time]]></description>
        </attribute>
        <attribute>
            <name>targetLoadAction</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>            
            <description><![CDATA[ action name which will be responsible for loading target]]></description>
        </attribute>
    </tag>
</taglib>
